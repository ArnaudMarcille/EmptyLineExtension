<UserControl x:Class="EmptyLineExtention.Core.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmptyLineExtention.Core.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox Padding="5,10,5,5" Header="{Binding HeaderName}">
            <StackPanel>
                <CheckBox IsChecked="{Binding AutoSaveEnabled}"
                          Content="{Binding AutoSaveContent}" Margin="0,0,0,5"/>
                <Separator />
                <TextBlock Text="{Binding AllowedLinesContent}" Margin="0,5,0,5"/>
                <TextBox Text="{Binding AllowedLines, UpdateSourceTrigger=PropertyChanged}" Name="tbx_NumericValue" PreviewTextInput="tbx_NumericValue_PreviewTextInput" />
                <TextBlock Text="{Binding AllowedLinesDesc}"
                           TextWrapping="Wrap"
                           Margin="0,5,0,5"/>

            </StackPanel>
            
        </GroupBox>
    </Grid>
</UserControl>
